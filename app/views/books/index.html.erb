<h1>Books</h1>
<p>現在の投稿数は<%= @books.count %></p>
	<% @books.each do |book| %>
	 <table>
	 	<tbody>
	 		<tr>
	 			<th>book</th>
	 			<th>body</th>
	 			<th>category</th>
	 		</tr>
	 		<tr>
	 			<td><%= book.title %></td>
	 			<td><%= book.body %></td>
	 			<td><%= book.category %></td>
	 			<td><%= link_to "show", book_path(book.id) %></td>
	 			<td><%= link_to "edit", edit_book_path(book) %></td>
	 			<td><%= link_to "destroy", book_path(book), method: :delete %></td>
	 		</tr>
	 	</tbody>
	 </table>
	<% end %>

<h1>新規投稿</h1>
<%= render 'books/form',book: @book %>
