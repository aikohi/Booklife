<%= form_with(model: book, local: true) do |form| %>

<h4>title</h4>
<%= form.text_field :title %>

<h4>body</h4>
<%= form.text_field :body %>

<h4>category</h4>
<%= form.radio_button :category, :日本 %>
<%= form.label :category, "日本"%>

<%= form.radio_button :category, :海外 %>
<%= form.label :category, "海外"%><br>

<%= form.submit '投稿' %>

<% end %>